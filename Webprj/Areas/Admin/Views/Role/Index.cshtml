@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<int>>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RoleView</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/ProductView.css" />
</head>
<body>
    <div class="container">
        <h1 class="mt-4 mb-4">Quản lý Roles</h1>

        <p class="mb-3">
            <a asp-action="Create" class="btn btn-primary me-2">Tạo Role mới</a>
        </p>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Tên Role</th>
                    <th style="width:150px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning me-1">Sửa</a>
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa role này?');">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-area="Admin" asp-controller="SiteData" asp-action="Index" method="get" style="display:inline;">
            <button type="submit" class="btn btn-secondary">Trang Quản Lý Chính</button>
        </form>
    </div>

    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
</body>
</html>
