@model Webprj.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Danh Mục</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/CategoryView.css" />
    <style>
        .detail-row {
            margin-bottom: 10px;
            white-space: nowrap;
        }

        .detail-label {
            width: 150px;
            font-weight: bold;
        }

        .detail-value {
            flex: 1;
        }
    </style>
</head>
<body>

<div>
    <h3>Thông Tin Chi Tiết : @Model.CategoryName</h3>
        <div>
            <hr />
            <div class="detail-row">
                <span class="detail-label">Mã Danh Mục:</span>
                <span class="detail-value">@Html.DisplayFor(model => model.CategoryId)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Tên Danh Mục:</span>
                <span class="detail-value">@Html.DisplayFor(model => model.CategoryName)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Mô Tả:</span>
                <span class="detail-value">@Html.DisplayFor(model => model.Description)</span>
            </div>
            <hr />
        </div>
</div>
<div>
    <a asp-action="CategoryView" class="btn btn-secondary">Trở Lại Danh Sách Danh Mục</a>
</div>
</body>
</html>
