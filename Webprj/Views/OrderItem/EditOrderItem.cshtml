@model Webprj.Models.OrderItem

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh Sửa Sản Phẩm Đặt</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/OrderItemView.css" />
</head>
<body>

<h4>Thông Tin Chi Tiết : @Model.OrderItemId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEditOrderItem" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderItemId" />
            <div class="form-group">
                    <label asp-for="OrderId" class="control-label">Mã Đơn Đặt Hàng : </label>
                    <input asp-for="OrderId" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                    <label asp-for="ProductId" class="control-label">Mã Đơn Đặt Hàng</label>
                    <input asp-for="ProductId" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="ProductNumber" class="control-label">Số Lượng Sản Phẩm Đặt : </label>
                <input asp-for="ProductNumber" class="form-control" />
                <span asp-validation-for="ProductNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label">Tổng Tiền : </label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <hr />
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="OrderItemView" class="btn btn-secondary">Hủy</a>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
