@model Webprj.Models.ViewModel.CheckoutViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thanh toán";
}
<link rel="stylesheet" type="text/css" href="~/css/views/ProductView.css" />
<h2>Thanh toán đơn hàng #@Model.OrderID</h2>

<table border="1" class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số Lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var it in Model.Items)
        {
            <tr>
                <td>@it.ProductName</td>
                <td>@it.Quantity</td>
                <td>@it.UnitPrice.ToString("C")</td>
                <td>@it.TotalCost.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"><strong>Tổng cộng:</strong></td>
            <td>@Model.Subtotal.ToString("C")</td>
        </tr>
    </tfoot>
</table>
<form asp-action="Checkout" method="post">
    <input type="hidden" asp-for="OrderID" />
    <div class="form-group">
        <label asp-for="SelectedPayMethod">Phương thức thanh toán</label>
        <select asp-for="SelectedPayMethod" asp-items="Model.PayMethods" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Xác nhận thanh toán</button>
</form>
