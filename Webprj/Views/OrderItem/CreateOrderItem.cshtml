@model Webprj.Models.OrderItem

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm Sản Phẩm Đặt Mới</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/OrderItemView.css" />
</head>
<body>

<h4>Thêm Sản Phẩm Đặt</h4>
<hr />
        <form asp-action="ConfirmCreateOrderItem" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Mã Đơn Đặt Hàng : </label>
                <input asp-for="OrderId" class="form-control" required type="number" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Mã Sản Phẩm : </label>
                <input asp-for="ProductId" class="form-control" required type="number" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductNumber" class="control-label">Số Lượng Đặt : </label>
                <input asp-for="ProductNumber" class="form-control" />
                <span asp-validation-for="ProductNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label">Tổng Tiền : </label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="OrderItemView" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
