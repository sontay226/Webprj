@model Webprj.Models.Discount

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Giảm Giá</title>
    <style>
        .detail-row {
            margin-bottom: 10px;
        }

        .detail-label {
            display: inline-block;
            width: 150px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h3>Thông Tin Giảm Giá: @Model.DiscountCode</h3>
    <div>
        <hr />
        <div class="detail-row">
            <span class="detail-label">Mã Giảm Giá:</span>
            <span>@Html.DisplayFor(model => model.DiscountId)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Mã Áp Dụng:</span>
            <span>@Html.DisplayFor(model => model.DiscountCode)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Số Tiền Giảm:</span>
            <span>@Html.DisplayFor(model => model.DiscountAmount)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Ngày Bắt Đầu:</span>
            <span>@Html.DisplayFor(model => model.StartDate)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Ngày Kết Thúc:</span>
            <span>@Html.DisplayFor(model => model.EndDate)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Loại Giảm Giá:</span>
            <span>@Html.DisplayFor(model => model.DiscountType)</span>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="DiscountView" class="btn btn-secondary">Trở Lại Danh Sách Giảm Giá</a>
    </div>
</body>
</html>
