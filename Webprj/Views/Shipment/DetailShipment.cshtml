@model Webprj.Models.Shipment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Giao Hàng</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/ShipmentView.css" />
    <style>
        .detail-row {
            margin-bottom: 10px;
            white-space: nowrap;
        }

        .detail-label {
            width: 150px;
            font-weight: bold;
        }

        .detail-value {
            flex: 1;
        }
    </style>
</head>
<body>

<div>
    <h3>Thông Tin Chi Tiết</h3>
        <div>
            <hr />
            <div class="detail-row">
                <span class="detail-label">Mã Giao Hàng :</span>
                <span class="detail-value">@Html.DisplayFor(model => model.ShipmentId)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Mã Đơn Đặt Hàng :</span>
                <span class="detail-value">@Html.DisplayFor(model => model.OrderId)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Ngày Giao Hàng :</span>
                <span class="detail-value">@Html.DisplayFor(model => model.ShippingDate)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Ngày Đặt Hàng :</span>
                <span class="detail-value">@Html.DisplayFor(model => model.PurchaseDate)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Tên Người Giao :</span>
                <span class="detail-value">@Html.DisplayFor(model => model.ShipperName)</span>
            </div>
            <hr />
        </div>
</div>
<div>
    <a asp-action="ShipmentView" class="btn btn-secondary">Trở Lại Danh Sách Giao Hàng</a>
</div>
</body>
</html>
