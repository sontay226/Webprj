@model Webprj.Models.Supplier

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Nhà Cung Cấp</title>
    <link rel="stylesheet" type="text/css" href="~/css//views/SupplierView.css" />
    <style>
        .detail-row {
            margin-bottom: 10px;
            white-space: nowrap;
        }

        .detail-label {
            width: 150px;
            font-weight: bold;
        }

        .detail-value {
            flex: 1;
        }
    </style>
</head>
<body>

    <h3>Thông Tin Chi Tiết: @Model.SupplierId</h3>
    <div>
        <hr />
        <div class="detail-row">
            <span class="detail-label">Mã Nhà Cung Cấp :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.SupplierId)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tên Ngắn :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.ShortName)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tên Đầy Đủ :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.FullName)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Email :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Email)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Số Điện Thoại :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Địa Chỉ :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Address)</span>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="SupplierView" class="btn btn-secondary">Trở Lại Danh Sách Nhà Cung Cấp</a>
    </div>
</body>
</html>
