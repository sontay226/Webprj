@model Webprj.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xóa Khách hàng</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/CustomerView.css" />
    <style>
        .detail-row {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .detail-label {
            width: 150px;
            font-weight: bold;
        }

        .detail-value {
            flex: 1;
        }
    </style>
</head>
<body>

    <h3>Chắc Chắn Muốn Xóa Khách Hàng : @Model.CustomerName Này?</h3>
    <div>
        <h4>Thông Tin Chi Tiết</h4>
        <hr />
        <div class="detail-row">
            <span class="detail-label">Mã Khách Hàng :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.CustomerId)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tên Khách Hàng :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.CustomerName)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Email : </span>
            <span class="detail-value">@Html.DisplayFor(model => model.Email)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Số Điện Thoại :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Địa Chỉ Giao Hàng:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.ShippingAddress)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Địa Chỉ Thanh Toán :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.BillingAddress)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Mật Khẩu Băm: </span>
            <span class="detail-value">@Html.DisplayFor(model => model.PasswordHash)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tạo Vào :</span>
            <span class="detail-value">@Html.DisplayFor(model => model.CreatedAt)</span>
        </div>
    </div>
    <hr />
    <form asp-action="ConfirmDeleteCustomer" method="post">
        <input type="hidden" asp-for="CustomerId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="CustomerView" class="btn btn-secondary">Trở Lại Danh Sách Khách Hàng</a>
    </form>
</body>
</html>
