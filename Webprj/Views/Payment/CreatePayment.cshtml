@model Webprj.Models.Payment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm Thanh Toán Mới</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/PaymentView.css" />
</head>
<body>

<h4>Thêm Thanh Toán</h4>
<hr />

        <form asp-action="ConfirmCreatePayment" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Mã Đơn Đặt Hàng : </label>
                <input asp-for="OrderId" class="form-control" required type="number" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayMethod" class="control-label">Phương Thức Thanh Toán </label>
                <input asp-for="PayMethod" class="form-control" />
                <span asp-validation-for="PayMethod" class="text-danger"></span>
            </div>
            <hr />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="CustomerView" class="btn btn-secondary">Hủy</a>
        </div>
        </form>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
