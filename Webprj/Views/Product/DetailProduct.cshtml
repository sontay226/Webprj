@model Webprj.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Sản Phẩm</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/ProductView.css" />
    <style>
        .detail-row {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .detail-label {
            width: 150px;
            font-weight: bold;
        }

        .detail-value {
            flex: 1;
        }
    </style>
</head>
<body class="product">

    <h3>Thông Tin Chi Tiết: @Model.Name</h3>
    <div>
        @if(!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:300px; margin-bottom:15px" />
        }
    </div>
    <div class="form-container">
        <hr />
        <div class="detail-row">
            <span class="detail-label">Tên Sản Phẩm:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Name)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Mô Tả:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Description)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Giá:</span>
            <span class ="detail-value">@Html.DisplayFor(model => model.Price)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Hàng Tồn:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.StockQuantity)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Link Ảnh:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.ImageUrl)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Chứng Nhận:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Certificate)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tính Năng Đặc Biệt:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.TechnicalSpecifications)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Ngày Tạo:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.CreatedAt)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Ngày Cập Nhật:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.UpdatedAt)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Mã Danh Mục:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.CategoryId)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Mã Nhà Cung Cấp:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.SupplierId)</span>
        </div>
        <hr />
    </div>
    <div>
        <a asp-action="ProductView" class="btn btn-secondary">Trở Lại Danh Sách Sản Phẩm</a>
    </div>
</body>
</html>
