@model IEnumerable<Webprj.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductView</title>
</head>
<body>
<p>
    <a asp-action="Create">Thêm</a>
    <a asp-action="Find">Tìm Kiếm</a>
</p>
<table border="1" class="table">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Giá </th>
            <th>Hàng Tồn</th>
            <th>Link Ảnh</th>
            <th>Chứng Nhận</th>
            <th>Tính Năng Đặc Biệt</th>
            <th>Tạo Vào</th>
            <th>Cập Nhật Vào </th>
            <th>Danh Mục</th>
            <th>Nhà Cung Cấp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicalSpecifications)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierId)
            </td>
            <td>
                <a asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId">Xóa</a> |
                <a asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Thông Tin</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
