@model Webprj.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh Sửa Đơn Hàng</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/OrderView.css" />
</head>
<body>

    <h3>Chỉnh Sửa Đơn Hàng: @Model.OrderId</h3>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="ConfirmEditOrder" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderId" />
                <div class="form-group">
                    <label asp-for="OrderId" class="control-label">Mã Đơn Đặt Hàng</label>
                    <input asp-for="OrderId" class="form-control" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Mã Khách Hàng</label>
                    <input asp-for="CustomerId" class="form-control" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="OrderDate" class="control-label">Ngày Đặt Hàng</label>
                    <input asp-for="OrderDate" class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddress" class="control-label">Địa Chỉ Giao Hàng</label>
                    <input asp-for="ShippingAddress" class="form-control" />
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Trạng Thái</label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalAmount" class="control-label">Tổng Tiền</label>
                    <input asp-for="TotalAmount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentMethod" class="control-label">Phương Thức Thanh Toán</label>
                    <input asp-for="PaymentMethod" class="form-control" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="OrderView" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
