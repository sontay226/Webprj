@model IEnumerable<Webprj.Models.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Đặt Hàng</title>
    <link rel="stylesheet" type="text/css" href="~/css/views/OrderView.css" />
</head>
<body>
<p>
    <a asp-action="Create" class="btn-secondary">Thêm</a>
    <a asp-action="Find" class="btn-secondary">Tìm Kiếm</a>
</p>
<table border="1" class="table">
    <thead>
        <tr>
                <th>Mã Đặt Hàng</th>
                <th>Mã Khách Hàng</th>
                <th>Thời Gian Đặt</th>
                <th>Địa Chỉ Giao</th>
                <th>Trạng Thái</th>
                <th>Tổng Tiền</th>
                <th>Phương Thức Thanh Toán</th>
                <th>Tùy Chọn</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                <a asp-action="DeleteOrder" asp-route-OrderId="@item.OrderId">Xóa</a> |
                <a asp-action="EditOrder" asp-route-OrderId="@item.OrderId">Sửa</a> |
                <a asp-action="DetailOrder" asp-route-OrderId="@item.OrderId">Thông Tin</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
