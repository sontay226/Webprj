@model Webprj.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Đơn Đặt Hàng</title>
    <style>
        .detail-row {
            margin-bottom: 10px;
            white-space: nowrap;
        }

        .detail-label {
            width: 150px;
            font-weight: bold;
        }

        .detail-value {
            flex: 1;
        }
    </style>
</head>
<body>
    <h3>Thông Tin Chi Tiết: @Model.OrderId</h3>
    <div>
        <hr />
        <div class="detail-row">
            <span class="detail-label">Mã Đặt Hàng:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.OrderId)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Mã Khách Hàng:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.CustomerId)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Ngày Đặt Hàng:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.OrderDate)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Địa Chỉ Giao Hàng:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.ShippingAddress)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Trạng Thái:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Status)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Tổng Tiền:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.TotalAmount)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Phương Thức Thanh Toán:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.PaymentMethod)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Khách Hàng:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Customer.CustomerName)</span>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="OrderView" class="btn btn-secondary">Trở Lại Danh Sách Đơn Đặt Hàng</a>
    </div>
</body>
</html>
